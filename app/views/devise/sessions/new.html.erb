<br>
<div class="container">
  <div class="row">
	<div class="span7">
	  <%= render "devise/shared/desc" %>
	</div>
	<div class="span5">
	  <div class="well">	
		<h4>ログイン</h4>
		<hr>
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		
		<div class="control-group">
		  <%= f.label :"メールアドレス" %>
		  <%= f.email_field :email %>
		</div>
		
		<div><%= f.label :"パスワード" %>
		  <%= f.password_field :password %></div>
		
		<% if devise_mapping.rememberable? -%>
		<div><%= f.check_box :remember_me %> <%= f.label :"ログイン情報を保存する" %></div>
		<% end -%>

		<br>
		<div><%= f.submit "ログイン", :class => "btn btn-primary" %></div>
		<% end %>

		<%= render "devise/shared/links" %>

	  </div>

	</div>
  </div>
  <%= render "devise/shared/footer" %>
</div>
